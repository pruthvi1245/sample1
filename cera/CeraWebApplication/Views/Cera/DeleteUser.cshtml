@model CeraWebApplication.Models.CeraUserModel

@{
    ViewData["Title"] = "DeleteUser";
}

<h1>DeleteUser</h1>

<h3>Are you sure you want to delete this User: @Model.UserName?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmailId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Roles[0])
        </dd>
    </dl>
    
    <form asp-action="DeleteUser">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Cera" asp-action="ManageUsers">Back to List</a>
    </form>
</div>
